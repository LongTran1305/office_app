<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <View
        android:id="@+id/viewOutSide"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/color_32000000"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/lnCalendar"/>

    <LinearLayout
        android:id="@+id/lnCalendar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/bg_top_border"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        >
        <View
            android:id="@+id/viewDash"
            android:layout_width="64dp"
            android:layout_height="5dp"
            android:background="@drawable/bg_left_right_border"
            android:layout_marginTop="13dp"
            android:layout_marginBottom="11dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/viewOutSide"
            app:layout_constraintBottom_toTopOf="@+id/lnChooseDate"
            />

        <LinearLayout
            android:id="@+id/lnChooseDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingVertical="15dp"
            android:background="@color/color_f8fafb"
            app:layout_constraintBottom_toTopOf="@+id/cldView"
            app:layout_constraintTop_toBottomOf="@+id/viewOutSide">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Choose date"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="@color/color_647c95"/>
        </LinearLayout>

        <CalendarView
            android:id="@+id/cldView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            android:dateTextAppearance="@style/CalenderViewDateCustomText"
            android:theme="@style/CalenderViewCustom"
            android:weekDayTextAppearance="@style/CalenderViewWeekCustomText"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>